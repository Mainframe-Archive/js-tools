    "test:types": "flow check",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "@mainframe/rpc-stream": "^0.2.4",
    "@mainframe/transport-electron": "^0.1.0"
  },
  "devDependencies": {
    "flow-bin": "^0.93.0",
    "rxjs": "^6.0.0"
  }
