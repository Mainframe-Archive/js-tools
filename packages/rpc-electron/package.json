{
  "name": "@mainframe/rpc-electron",
  "version": "0.1.0",
  "description": "Electron RPC client",
  "repository": "git@github.com:MainframeHQ/js-tools.git",
  "main": "lib/index.js",
  "author": "Mainframe",
  "license": "MIT",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "clean": "del lib",
    "build:js": "BABEL_ENV=electron-renderer babel src --out-dir lib",
