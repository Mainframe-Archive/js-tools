{
  "name": "js-tools",
  "version": "1.0.0",
  "description": "Mainframe JS tools",
  "repository": "git@github.com:MainframeHQ/js-tools.git",
  "main": "index.js",
  "author": "Mainframe",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/fs-extra",
      "**/node-fetch",
      "**/nanoid",
      "**/oboe",
      "**/rx-socket",
      "**/sodium-universal",
      "**/ws"
    ]
  },
  "scripts": {
    "flow:install": "lerna exec --concurrency 1 -- flow-typed install --ignoreDeps=dev",
    "bootstrap": "lerna bootstrap && yarn flow:install",
    "lint": "eslint packages/*/src packages/*/__tests__",
    "lint:fix": "yarn lint --fix",
    "test:unit": "BABEL_ENV=test jest --config jest.config.js",
    "test:ci": "BABEL_ENV=test jest --ci --config jest.config.ci.js --runInBand",
    "test:types": "flow check",
    "test": "yarn lint && yarn test:types && yarn test:unit",
    "build": "lerna run build",
    "start": "yarn build && yarn test"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.9.0",
    "eslint-config-mainframe": "^3.0.0",
    "flow-bin": "^0.92.1",
    "flow-copy-source": "^2.0.2",
    "flow-typed": "^2.5.1",
    "jest": "^24.1.0",
    "jest-junit": "^6.2.1",
    "lerna": "^3.4.3",
    "prettier": "^1.15.2"
  }
}
