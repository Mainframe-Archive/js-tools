{
  "name": "js-tools",
  "version": "1.0.0",
  "description": "Mainframe JS tools",
  "repository": "git@github.com:MainframeHQ/js-tools.git",
  "main": "index.js",
  "author": "Mainframe",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/rx-socket", "**/rx-socket/**"]
  },
  "scripts": {
    "flow:create-symlinks": "flow-mono create-symlinks .flowconfig",
    "flow:install-types":
      "flow-mono install-types --overwrite --ignoreDeps=dev",
    "flow:reinstall": "lerna exec del flow-typed && yarn flow:install-types",
    "flow:align": "flow-mono align-versions",
    "flow:bootstrap": "yarn flow:create-symlinks && yarn flow:install-types",
    "bootstrap": "lerna bootstrap && yarn flow:bootstrap",
    "lint": "eslint packages/*/src",
    "lint:fix": "yarn lint --fix",
    "test:project": "jest",
    "test:packages": "lerna run test",
    "test": "yarn test:packages && yarn test:project",
    "test:all": "yarn lint && yarn test",
    "build": "lerna run build",
    "start": "yarn lint && yarn build && yarn test"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-syntax-class-properties": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.19.1",
    "eslint-config-mainframe": "^1.1.0",
    "flow-bin": "^0.72.0",
    "flow-copy-source": "^1.3.0",
    "flow-mono-cli": "^1.3.1",
    "flow-remove-types": "^1.2.3",
    "jest": "^22.4.3",
    "lerna": "^2.11.0",
    "prettier": "^1.12.1"
  },
  "jest": {
    "bail": true,
    "collectCoverage": true
  }
}
